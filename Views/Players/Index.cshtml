@section css {
    <environment include="Development">
	    <link rel="stylesheet" type="text/css" href="~/css/index.css" asp-append-version="true" />
	    <link rel="stylesheet" type="text/css" href="~/css/chats.css" asp-append-version="true" />
	    <link rel="stylesheet" type="text/css" href="~/css/player.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="~/css/bundles/player.min.css" asp-append-version="true" />
    </environment>
}

@section head {
    <meta http-equiv="ScreenOrientation" content="autoRotate:disabled">
}

@section scripts {
    <script src="~/external/colorpicker.js" asp-append-version="true"></script>

    <environment include="Development">
        <script src="~/js/index.js" asp-append-version="true"></script>
        <script src="~/js/chats.js" asp-append-version="true"></script>
        <script src="~/js/player.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/bundles/player.min.js" asp-append-version="true"></script>
    </environment>
}

<div id="mainDiv" class="center flexColumns">

    <div id="choosePlayerNameLabel" class="center hidden">
        Welcome to Picture Panels!
    </div>

    <div id="playerNameInputDiv" class="center hidden">
        <input id="playerNameInput" class="playerNameInput" type="text" maxlength="14" autocomplete="off" />
    </div>

    <div id="colorPicker" class="center hidden"></div>

    <div id="choosePlayerName" class="center hidden">
        <input id="choosePlayerNameButton" class="center" type="button" value="Play!" onclick="choosePlayerNameButtonOnClick()" />
    </div>

    <div id="chooseTeam" class="center hidden">
        Choose your team
    </div>

    <div id="playerBanner" class="playerBanner playerBannerChooseTeam center hidden">
        <div id="playerName" class="playerBannerItem playerName hidden"></div>
        <div id="playerBannerTeamNames" class="playerBannerItem">
            <div id="teamOneName" class="teamName chooseTeamName teamBox teamOneBox">Loading...</div>
            <div id="teamTwoName" class="teamName chooseTeamName teamBox teamTwoBox">Loading...</div>
            <div id="chooseSmallestTeam" class="teamName chooseTeamName chooseSmallestTeamBox">Loading...</div>
        </div>
    </div>
    <div id="turnStatusMessage" class="turnStatusMessage center"></div>

    <div id="panelButtons" class="panelButtons center hidden"></div>

    <div id="teamGuesses" class="teamGuesses center hidden"></div>

    <div id="chats" class="chats hidden"></div>

    <div id="teamGuessesInputContainer" class="teamGuessesInputContainer center hidden">
        <div id="teamGuessesMessage" class="teamGuessesMessage">This is a default message for the team guess.</div>
        <input type="button" id="teamGuessesButton" class="defaultButton teamGuessesButton center" value="Guess" />
    </div>
    <div id="chats_input" class="chatInputContainer hidden">
        <input id="chats_inputText" type="text" class="chatInputText" autocomplete="off" maxlength="280" />
        <input type="button" id="chats_send" class="defaultButton chatSendButton" value="Chat" />
    </div>

</div>