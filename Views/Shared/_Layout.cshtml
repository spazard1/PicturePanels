<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0'>

    @RenderSection("head", required: false)

    @{
        ViewData["Title"] = string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString()) ? "Picture Panels" : "Picture Panels - " + ViewData["Title"];
    }

    <title>@ViewData["Title"]</title>
    <link rel="icon" href="favicon.ico" type="image/ico" />
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous" />


    @RenderSection("css", required: true)
    <link id="themeCssLink" rel="stylesheet" type="text/css" href="themes/default.css" />
</head>
<body draggable="false" ondragstart="return false;" ondrop="return false;">
   <div id="loginPrompt" class="form-content" style="display:none; color:black;">
      <form class="form" role="form">
        <div class="form-group">
          <label class="loginPrompt" for="username-modal">Username</label>
          <input type="text" id="username-modal" class="form-control" name="username-modal" placeholder="Username" />
        </div>
        <br />
        <div class="form-group">
          <label class="loginPrompt" for="password-modal">Password</label>
          <input type="password" id="password-modal" class="form-control" name="password-modal" placeholder="Password" />
        </div>
      </form>
    </div>

    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.7/signalr.js"></script>
    @RenderSection("Scripts", required: true)

</body>
</html>
