<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0'>

    @RenderSection("head", required: false)

    @{
        ViewData["Title"] = string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString()) ? "Picture Panels" : "Picture Panels - " + ViewData["Title"];
    }

    <title>@ViewData["Title"]</title>
    <link rel="icon" href="favicon.ico" type="image/ico" />
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />

    @RenderSection("css", required: true)
    <link id="themeCssLink" rel="stylesheet" type="text/css" href="themes/default.css" />
</head>
<body draggable="false" ondragstart="return false;" ondrop="return false;">
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.7/signalr.js"></script>
    @RenderSection("Scripts", required: true)
</body>
</html>
